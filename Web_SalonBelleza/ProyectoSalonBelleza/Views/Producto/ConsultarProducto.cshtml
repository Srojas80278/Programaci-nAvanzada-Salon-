@model IEnumerable<ProyectoSalonBelleza.Entidades.ProductoEnt>

@{
    ViewBag.Title = "ConsultarProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="container">
        <h2 class="text-center mb-6 display-6 font-weight-bold text-success text-bg-dark">Consultar Producto</h2>

        <p style="padding-bottom: 20px; padding-top: 20px;" class="text-center">
            @Html.ActionLink("Registrar Nuevo Producto", "RegistrarProducto", null, new { @class = "btn btn-success" })
        </p>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th class="text-center">
                            Código Producto
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.Descripcion)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.Cantidad)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.Precio)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.Imagen)
                        </th>
                        <th class="text-center">
                            Editar
                        </th>
                        <th class="text-center">
                            Eliminar
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ConProducto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cantidad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Precio)
                            </td>
                            <td style="text-align:center">
                                <img style="max-width: 100px; height: auto;" src="@item.Imagen" alt="Imagen">
                            </td>
                            <td style="text-align:center">
                                <a href="@Url.Action("ActualizarProducto","Producto", new { q = item.ConProducto })"><i class="fa fa-user fa-lg" style="color: #13FF00;"></i></a>
                            </td>
                            <td style="text-align:center">
                                <a href="@Url.Action("ConfirmarBorrarProducto","Producto", new { q = item.ConProducto })"><i class="fa fa-trash fa-lg" style="color: #ff0000;"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</body>