@model IEnumerable<ProyectoSalonBelleza.Entidades.CitaEntidad>
@{
    ViewBag.Title = "Consultar Citas";
    Layout = null; // Asegúrate de que Layout esté establecido como null
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h2>Consultar Citas</h2>



        <div class="d-flex justify-content-center">
            @Html.ActionLink("Crear Nueva Cita", "RegistrarCita", null, new { @class = "btn btn-primary" })
        </div>



        <table class="table">
            <thead>
                <tr>
                    <th>Estilista</th>
                    <th>Fecha</th>
                    <th>Sede</th>
                    <th>Nombre del Cliente</th>
                    <th>Servicio</th>
                    <th>Descripción del Servicio</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.estilista)</td>
                        <td>@Html.DisplayFor(modelItem => item.fecha)</td>
                        <td>@Html.DisplayFor(modelItem => item.sede)</td>
                        <td>@Html.DisplayFor(modelItem => item.nombre_cliente)</td>
                        <td>@Html.DisplayFor(modelItem => item.servicio)</td>
                        <td>@Html.DisplayFor(modelItem => item.descripcion_servicio)</td>
                        <td>
                            @Html.ActionLink("Editar", "Editar",     new { /*id = item.Id */ })
                            @Html.ActionLink("Detalles", "Detalles", new { /*id = item.Id */ })
                            @Html.ActionLink("Eliminar", "Eliminar", new { /*id = item.Id */ })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>